// Header for female z axis stepper motors on the ramps 1.4


//Input parameters
pindistance=2.54;
pincollumns=2;
pinrows=4;
height=18;
pinthickness=0.95;
margin=0.4;
knee=7;




difference(){
    
translate([0,0,3+margin])
cube([pincollumns*pindistance+2*margin,(pinrows)*pindistance+2*margin,height],center=true);

for(i=[-pincollumns/2:pincollumns:pincollumns/2]){
for(j=[-pinrows/2+0.5:1:pinrows/2-0.5]){
    
    translate([i*pindistance/2,j*pindistance,0]){
cube([pinthickness*1.3,pinthickness*1.3,2*height],center=true);
color("red")cube([pinthickness+margin,pinthickness+margin,knee],center=true);
translate([pinthickness*i,0,0])cube([pinthickness*2,pinthickness+margin,3],center=true);
translate([0,0,knee/2+height/2])cube([pinthickness*2,pinthickness*2,height*1.9],center=true);
}
}
}
}
